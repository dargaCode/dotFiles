source /usr/local/etc/bash_completion.d/git-prompt.sh
export PS1="\n\[\e[36m\]\T \[\e[96m\]\w \[\e[0m\]\n\[\e[31m\]\u\[\e[93m\]\$(__git_ps1 ' $

alias showinvis='echo Showing invisible files; defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
alias hideinvis='echo Hiding invisible files; defaults write com.apple.finder AppleShowAllFiles  NO; killall Finder /System/Library/CoreServices/Finder.app'

alias syncup='echo Running browsersync on localhost; browser-sync start --server --files ["*/*.*", “*/*/*.*”, “*/*/*/*.*”]  --open "" --browser "google chrome"'

alias bashrefresh='echo Refreshing bash profile; source ~/.bash_profile'
alias bashedit='echo Editing bash profile; nano ~/.bash_profile'
